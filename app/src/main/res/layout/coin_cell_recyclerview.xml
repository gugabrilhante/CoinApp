<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:id="@+id/recycler_layout"
        android:padding="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/recycler_cell_imageview"
                android:layout_width="80sp"
                android:layout_height="80sp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recycler_cell_nome_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="nome"
                android:textColor="@color/mainTextView"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/recycler_cell_valor_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="valor"
                android:textColor="@color/colorItens"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/recycler_cell_ultima_consulta_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ultima consulta"
                android:textColor="@color/secondTextView"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/recycler_cell_fonte_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="fonte"
                android:textColor="@color/secondTextView"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>